@model List<CoreAndFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>
<br />
@using (Html.BeginForm())
{
    <p>
        Food Name:@Html.TextBox("par")
        <input type="submit" value="Find" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Change</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.CategoryID</td>
        <td>@item.CategoryName</td>
        <td>@item.Status</td>
        <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger">Delete</a></td>
        <td><a href="/Category/CategoryGet/@item.CategoryID" class="btn btn-success">Update</a></td>
        <td><a href="/Category/CategoryChange/@item.CategoryID" class="btn btn-warning">Pasif</a></td>
    </tr>
        }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>
